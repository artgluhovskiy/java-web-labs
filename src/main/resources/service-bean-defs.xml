<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="dao-bean-defs.xml"/>

    <context:annotation-config/>

    <!-- Profiling bean post processor -->
    <bean class="org.art.web.labs.web.bean_post_processors.ProfilingAnnotationBeanPostProcessor"/>

    <!-- Date/Time Service Bean definition -->
    <!-- Bean instantiation via constructor -->
    <bean id="dateTimeService_constr" class="org.art.web.labs.services.impl.DateTimeServiceImpl"
          init-method="initMethod" destroy-method="destroyMethod">
        <property name="serviceId" value="date_time_service_1_constr"/>
    </bean>
    <!-- Secondary bean name (alias) -->
    <alias name="dateTimeService_constr" alias="dateTimeServiceAlias"/>

    <!-- Bean instantiation via static factory method -->
    <bean id="dateTimeService_stat_factory"
          class="org.art.web.labs.services.impl.DateTimeServiceImpl"
          factory-method="createDateTimeService">
        <constructor-arg type="java.lang.String" value="date_time_service_2_stat_factory"/>
    </bean>

    <!-- Bean instantiation via the factory bean (service locator) -->
    <bean id="serviceLocator" class="org.art.web.labs.services.impl.ServiceLocator"/>

    <bean id="dateTimeService_bean_factory"
          factory-bean="serviceLocator"
          factory-method="createDateTimeService"/>

    <bean id="dateTimeService_constr_arg" class="org.art.web.labs.services.impl.DateTimeServiceImpl">
        <constructor-arg name="serviceId" value="date_time_service_4_constr_arg"/>
    </bean>

    <!-- Message Service Bean definition -->
    <bean id="messageService" class="org.art.web.labs.services.impl.MessageServiceImpl"
          init-method="initMethod">
        <constructor-arg type="java.lang.String" value="message_service_1"/>
        <property name="dateTimeService" ref="dateTimeService_constr"/>
    </bean>

    <!-- Chat Bean definitions -->
    <bean id="userService" class="org.art.web.labs.services.impl.UserServiceImpl"/>

    <bean id="chatImpl" class="org.art.web.labs.services.chat.ChatImpl" init-method="initChatImpl"/>

</beans>